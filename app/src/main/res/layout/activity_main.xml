<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adactivity.MainActivity">

    <include layout="@layout/layout_ad_provider" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bannerAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banner广告" />

            <Button
                android:id="@+id/slashAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开屏广告" />

            <Button
                android:id="@+id/interstitialAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="插屏广告" />

            <Button
                android:id="@+id/pasterAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="视频贴片广告" />

            <Button
                android:id="@+id/nativeRecyclerAD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="原生信息流广告" />

            <Button
                android:id="@+id/videoFeedAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="视频流广告" />

            <Button
                android:id="@+id/rewardVideoAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="激励视频" />

            <Button
                android:id="@+id/full_screen_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全屏视频" />

            <Button
                android:id="@+id/baichuanRedPacket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="百川超级红包" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical">

                <include layout="@layout/layout_ad_download_mode" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/main_info_item_left"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="DEMO" />

                    <TextView
                        android:layout_width="@dimen/main_info_item_center"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="：" />

                    <TextView
                        android:id="@+id/main_info_demo"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/main_info_item_left"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="美数SDK" />

                    <TextView
                        android:layout_width="@dimen/main_info_item_center"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="：" />

                    <TextView
                        android:id="@+id/main_info_meishu"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/main_info_item_left"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="穿山甲SDK" />

                    <TextView
                        android:layout_width="@dimen/main_info_item_center"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="：" />

                    <TextView
                        android:id="@+id/main_info_csj"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/main_info_item_left"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="广点通SDK" />

                    <TextView
                        android:layout_width="@dimen/main_info_item_center"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="：" />

                    <TextView
