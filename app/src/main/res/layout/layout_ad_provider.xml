<?xml version="1.0" encoding="utf-8"?>
<RadioGroup android:id="@+id/rdg_ad_provider"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioButton android:id="@+id/rb_ad_provider_ms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美数"/>

    <RadioButton android:id="@+id/rb_ad_provider_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百度"/>

    <RadioButton android:id="@+id/rb_ad_provider_csj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="穿山甲"/>

    <RadioButton android:id="@+id/rb_ad_provider_gdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广点通"/>

</RadioGroup>