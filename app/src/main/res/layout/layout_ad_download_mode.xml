<?xml version="1.0" encoding="utf-8"?>
<RadioGroup android:id="@+id/rdg_ad_download_mode"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下载提示模式：" />

    <RadioButton android:id="@+id/rb_ad_download_mode_directly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ad_provider_text_size"
        android:text="静默下载"/>

    <RadioButton android:id="@+id/rb_ad_download_mode_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ad_provider_text_size"
        android:text="全部提示"/>

    <RadioButton android:id="@+id/rb_ad_download_mode_wifi_directly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ad_provider_text_size"
        android:text="流量提示"/>

</RadioGroup>
