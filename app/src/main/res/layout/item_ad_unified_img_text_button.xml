<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--左图右文+下载按钮-->
    <RelativeLayout
        android:id="@+id/native_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp">

        <!-- 原生广告的小图 -->
        <ImageView
            android:id="@+id/small_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

        <!-- 原生广告的标题 -->
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/small_img"
            android:layout_marginLeft="6dp"
            android:layout_toLeftOf="@id/btn_download"
            android:layout_toRightOf="@id/small_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#e0000000" />

        <!-- 原生广告的描述 -->
        <TextView
            android:id="@+id/text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title"
            android:layout_alignBottom="@id/small_img"
            android:layout_toRightOf="@id/small_img"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/btn_download"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#a0000000" />
        <!-- 原生广告的点击按钮 -->
        <Button
            android:id="@+id/btn_download"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/small_img"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#80000000"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</FrameLayout>